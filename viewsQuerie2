CREATE VIEW joined AS
SELECT actor, title
FROM casts
JOIN movies
ON (MOVIES.movie_title = CASTS.title);

CREATE VIEW america AS 
SELECT actor, title
FROM joined
WHERE country = 'USA';


CREATE VIEW contar AS
SELECT actor, COUNT(title)
FROM america 
GROUP BY actor;
ORDER BY COUNT(title) DESC;
CREATE VIEW 


CREATE VIEW limitar AS
SELECT actor
FROM (SELECT actor
FROM (SELECT actor, COUNT(AMERICA.title) AS cuenta
FROM (SELECT actor, title
FROM (SELECT actor, title, country
FROM casts
JOIN movies
ON (MOVIES.movie_title = CASTS.title))
WHERE country = 'USA')
GROUP BY actor
ORDER BY cuenta DESC))
WHERE ROWNUM <= 5;
